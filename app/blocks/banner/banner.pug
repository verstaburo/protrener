mixin banner()
  +b.A.banner(href="add-trainer.html")&attributes(attributes)
    +e.DIV.bg
      +e.IMG(src='assets/images/banner_hor.jpg').image
    +e.DIV.content
      +e.SPAN.text Стать
        +e.BR
        | тренером
      +icon('pluslg').icon

mixin banner-vert()
  +b.A.banner_vertical(href="add-trainer.html")&attributes(attributes)
    +e.DIV.bg
      +e.PICTURE.image
        +e.SOURCE(srcset='assets/images/banner_hor.jpg' media="(max-width: 1439px)")
        +e.SOURCE(srcset='assets/images/banner_vert.jpg' media="(min-width: 1440px)")
        +e.IMG(src='assets/images/banner_hor.jpg').image
    +e.DIV.content
      +e.SPAN.text Стать
        +e.BR
        | тренером
      +e.SVG.icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19 19")
        path(d="M8,8V0h3V8h8v3H11v8H8V11H0V8Z")
