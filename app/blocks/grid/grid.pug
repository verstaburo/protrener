//- Для добавления сетки на страницу используется миксин +grid
//- Для добавления колонки - миксин +col(), в скобках указывается число колонок сетки, которому соответствует размер добавляемой колонки.
//- Пример сетки из трех колонок разной ширины (3, 4 и 5), общая ширина сетки — 12 колонок:
//- +grid
//-   +col(3)
//-     контент первой колонки
//-   +col(4)
//-     контент второй колонки
//-   +col(5)
//-     контент третьей колонки

mixin grid()
  .grid&attributes(attributes)
    block

mixin col(number)
  - var colnumber = "one";
  - if (number === 1)
    - colnumber = 'one';
  - if (number === 2)
    - colnumber = 'two';
  - if (number === 3)
    - colnumber = 'three';
  - if (number === 4)
    - colnumber = 'four';
  - if (number === 5)
    - colnumber = 'five';
  - if (number === 6)
    - colnumber = 'six';
  - if (number === 7)
    - colnumber = 'seven';
  - if (number === 8)
    - colnumber = 'eight';
  - if (number === 9)
    - colnumber = 'nine';
  - if (number === 10)
    - colnumber = 'ten';
  - if (number === 11)
    - colnumber = 'eleven';
  - if (number === 12)
    - colnumber = 'twelve';
  - if (number === 13)
    - colnumber = 'thirteen';
  - if (number === 14)
    - colnumber = 'fourteen';
  - if (number === 15)
    - colnumber = 'fifteen';
  - if (number === 16)
    - colnumber = 'sixteen';
  - if (number === 17)
    - colnumber = 'seventeen';
  - if (number === 18)
    - colnumber = 'eightteen';
  - if (number === 19)
    - colnumber = 'nineteen';
  - if (number === 20)
    - colnumber = 'twenty';
  - if (number === 21)
    - colnumber = 'twenty-one';
  - if (number === 22)
    - colnumber = 'twenty-two';
  - if (number === 23)
    - colnumber = 'twenty-three';
  - if (number === 24)
    - colnumber = 'twenty-four';
  - if (number === 25)
    - colnumber = 'twenty-five';
  - if (number === 26)
    - colnumber = 'twenty-six';
  - if (number === 27)
    - colnumber = 'twenty-seven';
  - if (number === 28)
    - colnumber = 'twenty-eight';
  - if (number === 29)
    - colnumber = 'twenty-nine';
  - if (number === 30)
    - colnumber = 'thirty';
  - if (number === 31)
    - colnumber = 'thirty-one';
  - if (number === 32)
    - colnumber = 'thirty-two';

  .grid__col(class="grid__col_" + colnumber)&attributes(attributes)
    block
