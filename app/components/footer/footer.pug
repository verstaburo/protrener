mixin footer(nobrush)
  +b.footer&attributes(attributes)
    - if(!nobrush) {
      +brushes
    - } else {
      +brushes._nodesktop
    - }
    +container
      +col(7).footer__contacts
        +contacts
      +col(12).footer__logo
        +logo._footer
      +col(4).footer__addus
        +navigation-link(href="add-trainer.html") Стать трейнером
      +col(7).footer__copyright
        +copyright

